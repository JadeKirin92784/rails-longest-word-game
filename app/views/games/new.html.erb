<h1>New Game</h1>

<% @letters.each do |letter| %>
<p class="btn btn-primary"> <%= letter %></p>
<% end %>

<form action="/score" method="post" data-turbo="false">
    <label for="guess">What is the longest word you can find?</label>
    <br>
    <div class="container-fluid">
        <input type="text" name="guess" value='<%= params[:guess] %>'>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <%= hidden_field_tag :start_time, @start_time %>
        <input type="submit" value ="Play" class="btn btn-light">
    </div>
  </form>
