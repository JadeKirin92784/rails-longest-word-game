<div class="container">
    <h1>RESULT</h1>

    <p> Your Guess: <%=@guess%></p>

    <p> Original Letters: <%=@letters%></p>

    <p> Time: <%=@result[:time].floor%> milliseconds</p>

    <p> Score: <%=(@result[:score]*10).floor%></p>

    <p><%=@result[:message]%></p>

    <%= link_to 'Play again', new_path %>
</div>